rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow only authenticated users
    function isSignedIn() {
      return request.auth != null;
    }

    // Restrict to specific Google Workspace domains (update as needed)
    function hasAllowedDomain() {
      return isSignedIn() && request.auth.token.email.matches('.+@uctel\\.co\\.uk$');
    }

    match /projects/{projectId} {
      allow read, write: if hasAllowedDomain();
    }
  }
}